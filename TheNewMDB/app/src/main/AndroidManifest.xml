<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.artman2111.thenewmdb">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/tmdb"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/TheMDB">
        <activity android:name=".activity.activity.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.activity.FilmActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.activity.FilmPosterActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.activity.FavoriteActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.activity.SearchActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.activity.ImageActivity"/>
        <activity android:name=".activity.activity.BestFilmActivity" android:screenOrientation="portrait"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f5e4819e826d867d000cec227b514081de01ab12" />
    </application>

</manifest>